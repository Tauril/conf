
! Hybrid Terminal Colours. Uses the palette from Tomorrow-Night:
! https://github.com/chriskempson/tomorrow-theme/blob/master/vim/colors/Tomorrow-Night.vim
! vim: ft=xdefaults
!!URxvt*font: xft:Ubuntu Mono:size=12
!URxvt*boldFont: xft:Ubuntu Mono:bold:size=12
!URxvt*letterSpace: -1
!URxvt*scrollBar: false

XTerm*faceName: xft:DejaVu Sans Mono for Powerline:size=10
XTerm*faceSize: 10
XTerm*utf8: 2
XTerm*selectToClipboard: true

*foreground:   #c5c8c6
*background:   #1d1f21
*cursorColor:  #aeafad
*color0:       #000000

! git current branch
*color1:       #c12226

! No error
*color2:       #778900

! git repo not clean
*color3:       #ae7b00

! Time
*color4:       #1d5594

*color5:       #682a9b

! Current path
*color6:       #2b7751

*color7:       #929593

*color8:       #666666

! Error code
*color9:       #a66666

*color10:      #b5bd68

*color11:      #f0c674

! Directory
*color12:      #81a2be

! png, etc
*color13:      #b294bb

*color14:      #8abeb7

*color15:      #ecebec

XTerm.VT100.font: 	-misc-fixed-medium-r-normal--18-120-100-100-c-90-iso10646-1
XTerm.vt100.translations: #override \n\
  Ctrl <Key> minus: smaller-vt-font() \n\
  Ctrl <Key> plus: larger-vt-font()
